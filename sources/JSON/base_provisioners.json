{
    "provisioners": [
        {
            "restart_timeout": "30m",
            "type": "windows-restart"
        },
        {
            "scripts": [
                "./localScripts/update_pkey_2019.ps1"
            ],
            "type": "powershell"
        },
        {
            "scripts": [
                "./localScripts/choco_installs.ps1"
            ],
            "type": "powershell"
        },
        {
            "scripts": [
                "./localScripts/set-bginfo.ps1"
            ],
            "type": "powershell"
        },
        {
            "scripts": [
                "./localScripts/reconfigure-winrm.ps1"
            ],
            "type": "powershell"
        },
        {
            "type": "windows-update",
            "search_criteria": "IsInstalled=0",
            "filters": [
                "exclude:$_.Title -like 'Preview'",
                "include:$true"
            ],
            "update_limit": 25
        },
        {
            "scripts": [
                "./localScripts/set-sysprep.ps1"
            ],
            "type": "powershell"
        },
        {
            "inline": [
                "C:/windows/system32/sysprep/sysprep.exe /generalize /oobe /unattend:C:/Windows/Panther/unattend.xml /quiet /reboot"
            ],
            "type": "windows-shell"
        }
    ]
}